<project name="Script" default="compile" basedir=".">

<!-- ##############################################
      Path to major.jar and (optional) mml file
      Use -Dmutator="mml:<path-to-mml-file>" to set a
      particular (compiled) mml-file.
     ############################################## -->
    <property name="major.jar" value="build/major/lib/major.jar"/>
    <property name="mutator" value=""/>
    <property name="plugin" value="-Xplugin:MajorPlugin ${mutator}"/>


<!-- Removes build/bin directory and any .csv and .log files in the current directory -->
    <target name="clean" description="Clean">
        <delete dir="build/bin"/>
        <delete>
            <fileset dir="." includes="*.csv"/>
            <fileset dir="." includes="*.log"/>
	    </delete>
    </target>

<!-- Creates build/bin directory -->
    <target name="init">
        <mkdir dir="build/bin"/>
    </target>

<!-- Given the path to the project's Java source code (specified using -Dsrc), uses Major to generate mutants 
and put them in the directory build/bin -->
    <target name="compile" depends="init" description="Compile">
        <javac includeantruntime="true" 
               srcdir="${src}"
              destdir="build/bin"
                debug="yes">
            <classpath>
                <pathelement location="${major.jar}"/>
                <fileset dir="${alt}">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
            <compilerarg value="${plugin}"/>
        </javac>
    </target>

<!-- Given the path to the Randoop-generated tests (specified using -Dtest), compiles and puts them in the 
directory build/bin -->
    <target name="compile.tests" depends="compile" description="Compile all tests">
        <javac includeantruntime="true" 
               srcdir="${test}"
              destdir="build/bin"
                debug="yes">
            <classpath>
                <fileset dir="${alt}">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
        </javac>
    </target>

<!-- Runs mutation analysis on all the mutants using the test suite -->
    <target name="mutation.test" description="Run mutation analysis for all unit test cases">
        <echo message="Running mutation analysis ..."/>
        <junit  printsummary="false" 
        		showoutput="false" 
        		mutationAnalysis="true"
                serializedMapsFile="results/preprocessing.ser"
                mutantsLogFile="mutants.log"
                summaryFile="results/summary.csv" 
                mutantDetailsFile="results/details.csv"
                covMapFile="results/covMap.csv"
                testMapFile="results/testMap.csv"
                killMapFile="results/killMap.csv">        
            <classpath>
                <pathelement path="build/bin"/>
                <fileset dir="${alt}">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
            <batchtest fork="false">
                <fileset dir="${test}">
                    <include name="**/RegressionTest.java"/>
                </fileset>
            </batchtest>
        </junit>
    </target>

</project>
